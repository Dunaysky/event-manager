<div class="entity-details-wrapper">
  <div class="authorization-form-wrapper">
    <h2 class="authorization-title">Edit <%= resource_name.to_s.humanize %></h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :first_name, class: 'authorization-input-label' %><br />
        <%= f.text_field :first_name, class: 'authorization-input', placeholder: true %>
      </div>

      <div class="field">
        <%= f.label :last_name, class: 'authorization-input-label' %><br />
        <%= f.text_field :last_name, class: 'authorization-input', placeholder: true %>
      </div>

      <div class="field">
        <%= f.label :email, class: 'authorization-input-label' %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'authorization-input' %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="field">
        <%= f.label :password, class: 'authorization-input-label' %> <i>(leave blank if you don't want to change it)</i><br />
        <%= f.password_field :password, autocomplete: "new-password", class: 'authorization-input' %>
        <% if @minimum_password_length %>
          <br />
          <em><%= @minimum_password_length %> characters minimum</em>
        <% end %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation, class: 'authorization-input-label' %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'authorization-input' %>
      </div>

      <div class="field">
        <%= f.label :current_password, class: 'authorization-input-label' %> <i>(we need your current password to confirm your changes)</i><br />
        <%= f.password_field :current_password, autocomplete: "current-password", class: 'authorization-input' %>
      </div>

      <div class="actions">
        <%= f.submit "Update", class: 'authorization-submit-button' %>
      </div>
    <% end %>

    <h3 class="authorization-title">Cancel my account</h3>

    <div class="authorization-input-label"> Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete, class: 'authorization-submit-button' %></div>

    <%= link_to "Back", :back, class: 'authorization-input-link' %>
  </div>
</div>
