<div class="entity-details-wrapper">
  <div class="authorization-form-wrapper">
    <h2 class="authorization-title">Forgot your password?</h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :email, class: 'authorization-input-label' %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'authorization-input' %>
      </div>

      <div class="actions">
        <%= f.submit "Send me reset password instructions", class: 'authorization-submit-button' %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>